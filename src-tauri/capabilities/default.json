{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$HOME/.config/archdeck/**" },
        { "path": "$HOME/Pictures/**" },
        { "path": "$HOME/Downloads/**" },
        { "path": "/tmp/archdeck/**" }
      ]
    },
    "fs:default"
  ]
}
